<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.duoc.pichangaspiscolas.LoginActivity">

    <TextView
        android:id="@+id/tvPichangas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PichangasPiscolas"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="107dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/etUsuario"
        android:layout_alignLeft="@+id/etUsuario"
        android:layout_alignStart="@+id/etUsuario" />

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Nombre  de usuario"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="148dp"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/tvContraseña"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="236dp"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/etContraseña"
        android:layout_alignLeft="@+id/etUsuario"
        android:layout_alignStart="@+id/etUsuario" />

    <EditText
        android:id="@+id/etContraseña"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:hint="xxxxxxxxxxxxxx"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="281dp"
        android:layout_above="@+id/btnInicio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="385dp"
        android:layout_marginBottom="77dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />


</RelativeLayout>
